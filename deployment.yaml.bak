apiVersion: apps/v1
kind: Deployment
metadata:
  name: dashboard-backend
  labels:
    app: dashboard-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dashboard-backend
  template:
    metadata:
      labels:
        app: dashboard-backend
    spec:
      containers:
      - name: dashboard-backend
        image: image-registry.openshift-image-registry.svc:5000/anjulakshmi-dev/dashboard-backend:latest
        ports:
        - containerPort: 8080
        env:
        - name: METRICS_TOKEN
          valueFrom:
            secretKeyRef:
              name: metrics-token      # Your secret name
              key: TOKEN
        resources:
          limits:
            cpu: 500m
            memory: 256Mi
          requests:
            cpu: 100m
            memory: 128Mi
        livenessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 15
          periodSeconds: 20
          timeoutSeconds: 1
          failureThreshold: 3
        readinessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 10
          timeoutSeconds: 1
          failureThreshold: 3

